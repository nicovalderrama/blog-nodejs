<% if (user) { %>
    <div class="mb-3 ml-2">
        <a href="/new" class="btn btn-dark">
            <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="pb-1 bi bi-plus" viewBox="0 0 16 16">
                <path d="M8 4a.5.5 0 0 1 .5.5v3h3a.5.5 0 0 1 0 1h-3v3a.5.5 0 0 1-1 0v-3h-3a.5.5 0 0 1 0-1h3v-3A.5.5 0 0 1 8 4z"/>
            </svg>
            Crear post
        </a>
    </div>  
    
    <% articles.forEach(article => { %> 
        <div class="mb-3 card box">
            <div class="card-body d-flex">
                <div class="card-image">
                    <img src="<%= article.imageURL %> " class="rounded" style="width: 300px;">
                </div>
                
                <div>
                    <div>
                        <h1 class="font-bold ml-3">
                            <%= article.title %>
                        </h1>
                    </div>
                    <div class="ml-3">
                        <%= article.description  %>   
                    </div>
                </div>
            </div>
            <div class="card-footer d-flex justify-content-between align-items-center">
                <p class="fs-3">
                    <%= article.createdAt.toLocaleDateString() %> 
                </p>
    
                <div class="d-flex">
                    <a href="/<%= article.slug %>" class="btn btn-dark mr-1">
                            Leer más
                    </a>
        
        
                    <div class="dropdown">
                        <button class="btn btn-secondary dropdown-toggle" type="button" data-bs-toggle="dropdown" aria-expanded="false">
                            Opciones
                        </button>
                        <ul class="dropdown-menu">
                            <li><hr class="dropdown-divider"></li>
                            <li><a href="/edit/<%= article.id %>" class="btn">
                                <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil mr-2" viewBox="0 0 16 16">
                                    <path d="M12.146.146a.5.5 0 0 1 .708 0l3 3a.5.5 0 0 1 0 .708l-10 10a.5.5 0 0 1-.168.11l-5 2a.5.5 0 0 1-.65-.65l2-5a.5.5 0 0 1 .11-.168l10-10zM11.207 2.5 13.5 4.793 14.793 3.5 12.5 1.207 11.207 2.5zm1.586 3L10.5 3.207 4 9.707V10h.5a.5.5 0 0 1 .5.5v.5h.5a.5.5 0 0 1 .5.5v.5h.293l6.5-6.5zm-9.761 5.175-.106.106-1.528 3.821 3.821-1.528.106-.106A.5.5 0 0 1 5 12.5V12h-.5a.5.5 0 0 1-.5-.5V11h-.5a.5.5 0 0 1-.468-.325z"/>
                                </svg>Editar
                            </a></li>
                            <li><hr class="dropdown-divider"></li>
                            <li>
                                <form action="/<%= article.id%>?_method=DELETE" method="POST">
                                    <button type="submit" class="btn bg-red">
                                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash mr-2" viewBox="0 0 16 16">
                                            <path d="M5.5 5.5A.5.5 0 0 1 6 6v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm2.5 0a.5.5 0 0 1 .5.5v6a.5.5 0 0 1-1 0V6a.5.5 0 0 1 .5-.5zm3 .5a.5.5 0 0 0-1 0v6a.5.5 0 0 0 1 0V6z"/>
                                            <path fill-rule="evenodd" d="M14.5 3a1 1 0 0 1-1 1H13v9a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2V4h-.5a1 1 0 0 1-1-1V2a1 1 0 0 1 1-1H6a1 1 0 0 1 1-1h2a1 1 0 0 1 1 1h3.5a1 1 0 0 1 1 1v1zM4.118 4 4 4.059V13a1 1 0 0 0 1 1h6a1 1 0 0 0 1-1V4.059L11.882 4H4.118zM2.5 3V2h11v1h-11z"/>
                                        </svg>Eliminar
                                    </button>
                                </form>
                            </li>
                        </ul>
                    </div>
    
                </div>
        </div>
    </div>
    <% }) %>
    <%} else { %>
        <% articles.forEach(article => { %> 
            <div class="mb-3 card box">
                <div class="card-body d-flex">
                    <div class="card-image">
                        <img src="<%= article.imageURL %> " class="rounded" style="width: 300px;">
                    </div>
                    
                    <div>
                        <div>
                            <h1 class="font-bold ml-3">
                                <%= article.title %>
                            </h1>
                        </div>
                        <div class="ml-3">
                            <%= article.description  %>   
                        </div>
                    </div>
                </div>
                <div class="card-footer d-flex justify-content-between align-items-center">
                    <p class="fs-3">
                        <%= article.createdAt.toLocaleDateString() %> 
                    </p>
        
                    <div class="d-flex">
                        <a href="/<%= article.slug %>" class="btn btn-dark mr-1">
                                Leer más
                        </a>
                    </div>
            </div>
        </div>
        <% }) %>
    <% } %>